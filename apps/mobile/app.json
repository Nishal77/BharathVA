{
  "expo": {
    "name": "mobile",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsLocalNetworking": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "usesCleartextTraffic": true,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow BharathVA to use your location to show local updates."
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Chirp-Regular.ttf",
            "./assets/fonts/Chirp-Medium.ttf",
            "./assets/fonts/Chirp-Bold.ttf",
            "./assets/fonts/Chirp Heavy.ttf",
            "./assets/fonts/SpaceMono-Regular.ttf",
            "./assets/fonts/Aclonica-Regular.ttf",
            "./assets/fonts/Rockybilly.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Chirp",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Chirp-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/Chirp-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/Chirp-Bold.ttf",
                    "weight": 700
                  },
                  {
                    "path": "./assets/fonts/Chirp Heavy.ttf",
                    "weight": 900
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/Chirp-Regular.ttf",
              "./assets/fonts/Chirp-Medium.ttf",
              "./assets/fonts/Chirp-Bold.ttf",
              "./assets/fonts/Chirp Heavy.ttf",
              "./assets/fonts/SpaceMono-Regular.ttf",
              "./assets/fonts/Aclonica-Regular.ttf",
              "./assets/fonts/Rockybilly.ttf"
            ]
          }
        }
      ],
      "expo-video",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "developer": {
      "tool": "expo-cli"
    }
  }
}
