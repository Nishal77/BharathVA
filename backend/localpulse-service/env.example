# BharathVA LocalPulse Service Environment Configuration
# Copy this file to .env.local and fill in the actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# NeonDB PostgreSQL Configuration
NEON_DB_URL=jdbc:postgresql://your-neon-host/neondb?sslmode=require
NEON_DB_USER=your_db_user
NEON_DB_PASSWORD=your_db_password

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Configuration
SERVER_PORT=8085

# ===========================================
# EUREKA SERVICE DISCOVERY CONFIGURATION
# ===========================================

# Eureka Client Configuration
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://discovery-service:8761/eureka/

# Eureka Instance Configuration
EUREKA_INSTANCE_PREFERIPADDRESS=true
EUREKA_INSTANCE_INSTANCEID=localpulse-service:8085
EUREKA_INSTANCE_HOSTNAME=localpulse-service

# ===========================================
# JPA CONFIGURATION
# ===========================================

JPA_DDL_AUTO=update

# ===========================================
# OPENWEATHER API CONFIGURATION
# ===========================================

# OpenWeather API Key (Get from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

LOGGING_LEVEL_COM_BHARATHVA_LOCALPULSE=INFO
LOGGING_LEVEL_ROOT=INFO

# ===========================================
# MANAGEMENT & ACTUATOR CONFIGURATION
# ===========================================

MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

